        <omgdi:waypoint x="175.0" y="178.0"/>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge bpmnElement="flow2" id="BPMNEdge_flow2">
        <omgdi:waypoint x="275.0" y="178.0"/>
        <omgdi:waypoint x="320.0" y="178.0"/>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge bpmnElement="flow3" id="BPMNEdge_flow3">
        <omgdi:waypoint x="420.0" y="178.0"/>
        <omgdi:waypoint x="465.0" y="178.0"/>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge bpmnElement="flow4" id="BPMNEdge_flow4">
        <omgdi:waypoint x="485.0" y="198.0"/>
        <omgdi:waypoint x="485.0" y="303.0"/>
        <omgdi:waypoint x="520.0" y="303.0"/>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge bpmnElement="flow5" id="BPMNEdge_flow5">
        <omgdi:waypoint x="505.0" y="178.0"/>
        <omgdi:waypoint x="550.0" y="178.0"/>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge bpmnElement="flow6" id="BPMNEdge_flow6">
        <omgdi:waypoint x="570.0" y="158.0"/>
        <omgdi:waypoint x="570.0" y="100.0"/>
        <omgdi:waypoint x="830.0" y="100.0"/>
        <omgdi:waypoint x="830.0" y="138.0"/>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge bpmnElement="flow7" id="BPMNEdge_flow7">
        <omgdi:waypoint x="590.0" y="178.0"/>
        <omgdi:waypoint x="635.0" y="178.0"/>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge bpmnElement="flow8" id="BPMNEdge_flow8">
        <omgdi:waypoint x="735.0" y="178.0"/>
        <omgdi:waypoint x="780.0" y="178.0"/>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge bpmnElement="flow9" id="BPMNEdge_flow9">
        <omgdi:waypoint x="880.0" y="178.0"/>
        <omgdi:waypoint x="925.0" y="178.0"/>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge bpmnElement="flow10" id="BPMNEdge_flow10">
        <omgdi:waypoint x="620.0" y="303.0"/>
        <omgdi:waypoint x="939.0" y="303.0"/>
        <omgdi:waypoint x="939.0" y="192.0"/>
      </bpmndi:BPMNEdge>
      
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>

</definitions>
